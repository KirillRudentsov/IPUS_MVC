@using Kendo_Example.Models;

@model CustomControls


            @{foreach (var item in Model.Control)
                {
                    if (item.ControlType == ControlType.button)
                    {
                        @(Html.Kendo().Button()
                        .Name(item.Id)
                        //.Tag("a")
                        .Icon(item.ImageClass)
                        .Content(item.Title)
                        .Events(events => events.Click("function(event){customButtonClick(event," + item.JsData.Text + ",'" + Url.Action("CallRecalcProcedure", "ProcedureCall") + "');}")))
                    }
                    // TODO
                }


            }

<div id="dialog" />

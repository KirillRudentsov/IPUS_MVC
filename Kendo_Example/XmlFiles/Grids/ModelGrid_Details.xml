<?xml version="1.0" encoding="utf-8" ?>
<Grid type="mainGrid" id="jsTestGrid" width="1800"
          height="600" tableId="1"
          caption="This is test table caption"
          selectCountRows="20">

  <DataSource action="GetGridData" controller_name="ComponentData" key_link="V_DETAIL" />

  <Update>
    <DataSource action="GridProcedure_Update" controller_name="ComponentData" key_link="TestProcedure.xml" />
  </Update>

  <Edit>
    <DataSource action="GridProcedure_Edite" controller_name="ComponentData" key_link="TestProcedure.xml" />
  </Edit>

  <Delete>
    <DataSource action="GridProcedure_Delete" controller_name="ComponentData" key_link="TestProcedure.xml" />
  </Delete>

  <COLUMNS>

    <column type="simple" name="ID" label="Id" width="100" hidden="false" visible="true" key="true">
      <Model editable="false" edittype="Integer" format="{0:0}">
        <default_value>0</default_value>
      </Model>
    </column>

    <column type="simple" name="INFO" label="Название" width="150" hidden="false" visible="true" key="false">
      <Model editable="true" edittype="String" format="">
        <default_value>TestName_Default</default_value>
      </Model>
    </column>

    <column type="simple" name="TESTNUMBER" label="TEST NUMBER" width="100" hidden="false" visible="true" key="true">
      <Model editable="false" edittype="Integer" format="{0:0}">
        <default_value>0</default_value>
      </Model>
    </column>

  </COLUMNS>
  <Export_Pdf file_name="Test_Export_File.pdf" caption="EXPORT TO PDF">
    <DataSource action="ExportFile" controller_name="ExportFiles" key_link="GetPdf_key" />
  </Export_Pdf>
  <Export_Excel file_name="Test_Export_File.xlsx" caption="EXPORT TO EXCEL">
    <DataSource action="ExportFile" controller_name="ExportFiles" key_link="GetExcel_key" />
  </Export_Excel>

  <ContextMenu ContextMenuOrientation="Vertical" id="ContextMenu">
    <Items>

      <item type="notSeparator" action="GridLink" title="Перейти к тест сету">
        <DataSource action="DynamicGrid" controller_name="Home" key_link="ModelGrid.xml" />
      </item>

      <item type="Separator"/>

      <item type="notSeparator" action="GridLink" title="Перейтик региональному тест сету">
        <DataSource action="DynamicGrid" controller_name="Home" key_link="ModeGrid_Regions.xml" />
      </item>

      <item type="Separator"/>

      <item type="notSeparator" action="ProcessDesignerLink" title="Show process designer" >
        <DataSource action="DynamicGraph" controller_name="Home" />
      </item>

      <item type="notSeparator" action="GridLink" title="Test context menu item" >
        <DataSource action="DynamicGrid" controller_name="Home" />
      </item>

    </Items>
  </ContextMenu>
  
</Grid>